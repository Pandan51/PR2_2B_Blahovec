<Application x:Class="Sokoban2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Sokoban2"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="WallBlockStyle" TargetType="{x:Type local:Blocks}">
            <Setter Property="Background" Value="DarkRed"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
        <Style x:Key="GroundBlockStyle" TargetType="{x:Type local:Blocks}">
            <Setter Property="Background" Value="Beige"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="PlayerBlockStyle" TargetType="{x:Type local:Blocks}">
            <Setter Property="Background" Value="Green"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Foreground" Value="Green"/>
            <Setter Property="Margin" Value="5"/>
            
        </Style>
        <Style x:Key="BoxBlockStyle" TargetType="{x:Type local:Blocks}">
            <Setter Property="Background" Value="SandyBrown"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style x:Key="GoalBlockStyle" TargetType="{x:Type local:Blocks}">
            <Setter Property="Background" Value="Yellow"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="Yellow"/>
            <Setter Property="BorderThickness" Value="4"/>
        </Style>
        <Style x:Key="BoxGoalBlockStyle" TargetType="{x:Type local:Blocks}">
            <Setter Property="Background" Value="SandyBrown"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="Yellow"/>
            <Setter Property="BorderThickness" Value="4"/>
        </Style>
        <Style x:Key="PlayerGoalBlockStyle" TargetType="{x:Type local:Blocks}">
            <Setter Property="Background" Value="Green"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Foreground" Value="Green"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="Yellow"/>
            <Setter Property="BorderThickness" Value="4"/>
        </Style>
    </Application.Resources>
</Application>
