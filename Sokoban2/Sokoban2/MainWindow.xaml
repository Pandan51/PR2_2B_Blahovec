<Window x:Class="Sokoban2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sokoban2"
        mc:Ignorable="d"
        x:Name="Map"
        Title="MainWindow" Height="800" Width="800">

    <Grid>
        
    
        <Grid x:Name="LayoutGrid">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="1*"/>
            
            </Grid.RowDefinitions>

        
        
            <Grid x:Name="PlayingFieldGrid" Grid.Column="0" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                
                </Grid.RowDefinitions>
                <!--<Rectangle x:Name="Character" Fill="Blue" Grid.Column="{Binding ElementName=Map,Path=_characterColumn}" Grid.Row="{Binding ElementName=Map,Path=_characterY}"/>-->
            </Grid>

            <Grid x:Name="ControlsGrid" Grid.Column="0" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>

                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Button Content="Undo" Grid.Column="0" Grid.Row="0" Click="ShowHide_Btn"/>
            
                <Button Content="Up" Grid.Column="1" Grid.Row="0" Click="Button_MoveUp"/>

                <Button Content="Reset" Grid.Column="2" Grid.Row="0" Click="Reset"/>

                <Button Content="Left" Grid.Column="0" Grid.Row="1" Click="Button_MoveLeft"/>

                <Button Content="Down" Grid.Column="1" Grid.Row="1" Click="Button_MoveDown"/>

                <Button Content="Right" Grid.Column="2" Grid.Row="1" Click="Button_MoveRight" />

            
            </Grid>

        
        </Grid>

        <Grid x:Name="VictoryGrid" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock TextAlignment="Center" Grid.Column="0" Grid.Row="0">Type Shit</TextBlock>
            <Button Content="Hide/Show" Grid.Column="0" Grid.Row="1" Click="ShowHide_Btn"/>

            
        </Grid>

        <Grid x:Name="LevelsGrid" Visibility="Hidden">
            
        </Grid>
    </Grid>

</Window>
